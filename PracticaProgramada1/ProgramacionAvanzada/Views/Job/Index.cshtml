@model List<ProgramacionAvanzada.Models.Job>

<h2>Lista de Puestos</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Data created</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr class="@(job.Id % 2 == 0 ? "even-row" : "odd-row")">
                <td>
                    @job.Id
                    @if (job.Id % 2 != 0)
                    {
                        <span class="additional-info">(IMPAR)</span>
                    }
                </td>
                <td>@job.Name</td>
                <td>
                    @switch (job.Id % 2)
                    {
                        case 0:
                            <span style="color: blue; font-weight: bold;">@job.Description</span>
                            break;
                        default:
                            <span style="color: green; font-style: italic;">@job.Description</span>
                            break;
                    }
                </td>
                <td>@job.DateCreated</td>
            </tr>
        }
    </tbody>
</table>
<td><a href="/job/crear" class="btn btn-primary">Crear Job</a></td>

<style>
    .even-row {
        background-color: #f0f0f0;
    }

    .odd-row {
        background-color: #e6f2ff;
    }

    .additional-info {
        color: red;
        font-size: 0.8em;
        margin-left: 5px;
    }
</style>