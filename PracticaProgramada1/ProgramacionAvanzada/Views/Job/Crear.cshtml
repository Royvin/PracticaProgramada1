@model ProgramacionAvanzada.Models.Job

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="bi bi-person-plus-fill"></i> Crear Nueva Puesto</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(model => model.Id, new { @class = "form-label fw-bold" })
                    <div>
                        @Html.DisplayFor(model => model.Id, new { @class = "form-control-plaintext" })
                        @Html.HiddenFor(model => model.Id)
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Name, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Description, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", placeholder = "Ingrese una descripción" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.DateCreated, new { @class = "form-label fw-bold" })
                    <div>
                        @Html.DisplayFor(model => model.DateCreated, new { @class = "form-control-plaintext" })
                        @Html.HiddenFor(model => model.DateCreated)
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Crear Puesto
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Regresar a Lista
                    </a>
                </div>
            }
        </div>
    </div>
</div>
